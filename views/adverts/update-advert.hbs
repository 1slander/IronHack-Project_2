<h1>Edit Advert</h1>
<form action="/adverts/{{ advert._id }}" method="POST">
  <div>
    <label for="title">Title:</label>
    <input type="text" name="title" value="{{ advert.title }}">
  </div>
  <div>
    <label for="imageUrl">Upload Image:
    <input type="file" name="imageUrl" value="{{ advert.picture }}">
  </div>
  <div>
    <label for="amount">Amount:</label>
    <input type="number" name="amount" value="{{ advert.amount }}">
  </div>
  <div>
    <label for="description">Description:</label>
    <textarea name="description">{{ advert.description }}</textarea>
  </div>
  <div>
    <label for="cost">Cost:</label>
    <input type="number" name="cost" value="{{ advert.cost }}">
  </div>
  <button type="submit">Update Advert</button>
</form>