<h1>CART</h1>

<a href="/adverts">Keep buying</a>
{{#if userCart}}
  <table class="cart">
    <th>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </th>
    <tbody>
      {{#each userCart.products}}
        <tr class="cart-item">
          <td class="cart-item-name">{{this.title}}</td>
          <td class="cart-item-qty">{{this.amount}}</td>
          <td class="cart-item-price">{{this.cost}}</td>
          <td>
            <form action="/cart/{{this._id}}/delete" method="post">
              <button type="submit">x</button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
    <tfoot>
      <tr class="cart-total">
        <td>
          <h2 class="cart-total-price">
            Â£<span>{{price}}</span>
          </h2>
        </td>
        {{!-- <td>
          <form action="/cart/{{this._id}}/remove" method="post">
            <button type="submit">Empty Cart</button>
          </form>
        </td> --}}
      </tr>
    </tfoot>

  </table>
{{else}}
  <p>Your cart is empty.</p>
{{/if}}