<div class="card-advert">
  {{#each adverts}}
    <div class="card-advert-info open-button relative" id="{{@index}}">
      <a href="/adverts/{{_id}}" onclick="return false;">
        <div>
          <img
            src="{{imageUrl}}"
            alt="{{title}}"
            class="transition duration-300 ease-in-out hover:opacity-75 open-button"
            id="{{@index}}"
          />
        </div>
        <h5 class="absolute top-0 left-0 p-2 text-white">{{title}}</h5>
      </a>
      <div>
        <form action="/adverts/{{_id}}/delete" method="POST">

        </form>
      </div>
    </div>

    <dialog class="modal" id="{{@index}}">
      <div class="modal-background">
        <img
          src="{{imageUrl}}"
          alt="Advert Image"
          class="object-cover w-full h-full"
        />
      </div>
      <div class="modal-content bg-gray-200 p-4">
        <h2
          class="text-2xl mb-4 absolute top-0 left-0 ml-4 mt-4"
          style="color: #08415c;"
        >{{title}}</h2>
        <div class="relative">
          <p>{{description}}</p>
          <div class="mt-4">
            <p><strong>Amount:</strong> {{amount}}</p>
            <p><strong>Cost:</strong> {{cost}}</p>
          </div>
          <div class="mt-4">

            <form action="/cart" method="post">
              <input type="hidden" name="productId" value="{{_id}}" />
              <input type="hidden" name="title" value="{{title}}" />
              <input type="hidden" name="amount" value="{{amount}}" />
              <input type="hidden" name="cost" value="{{cost}}" />
              <button
                type="submit"
                class="btn btn-primary bg-blue-500 text-white py-2 px-4 rounded uppercase hover:bg-blue-700 font-bold"
              >Add to Cart</button>
              <a href="/contact/{{_id}}" class="btn btn-secondary">Contact
                Seller</a>
              <button type="submit">Delete</button>
              <a href="/adverts/{{_id}}" class="btn btn-success">Update</a>
            </form>
          </div>
          <small class="text-gray-700">Posted by
            <strong>{{creator}}</strong>
            on
            {{createdAt}}</small>
          <button
            type="button"
            class="close-button bg-gray-300 text-gray-700 py-2 px-4 rounded hover:bg-gray-600 hover:text-white"
          >Close</button>
        </div>
      </div>
    </dialog>

  {{/each}}
</div>