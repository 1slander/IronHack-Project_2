<div class="card-advert container gap-3">
  {{#each adverts}}
    <div class="card col mb-4" style="width: 18rem">
      <img src="{{picture}}" alt="{{title}}" class="card-img-top" />
      <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <p class="card-text">{{description}}</p>
        <p class="card-text"><strong>Amount:</strong> {{amount}}</p>
        <p class="card-text"><strong>Cost:</strong> {{cost}}</p>
        <a href="#" class="btn btn-primary">Contact seller</a>
        <a href="/adverts/{{_id}}" class="btn btn-success">Update</a>
        <form action="/adverts/{{_id}}/delete" method="POST">
          <button class="btn btn-orange my-1" type="submit">Delete</button>
        </form>
      </div>
    </div>
    <dialog class="modal" id="{{@index}}">
      <h2>{{title}}</h2>
      <p>{{description}}</p>
      <p><strong>Amount:</strong> {{amount}}</p>
      <p><strong>Cost:</strong> {{cost}}</p>
      <a href="#" class="btn btn-primary">Contact seller</a>
      <p>Details</p>
      <small>Posted by <strong>{{creator}}</strong> on {{createdAt}}</small>
      <button class="close-button">Close</button>
    </dialog>
  {{/each}}
</div>